                </div>
            </a>
        </li>
    </ul>
</div>
<!-- End Chính sách mua hàng -->
<!-- show product -->
<div class="product">
    @foreach (Category cate in categoryList)
    {
        List<ProductGroup> lstProGrp = db.ProductGroups.Where(p => p.CategoryId == cate.Id).ToList();

        int counttab = 1;
        int countdtl = 1;
        <div class="sanpham">
            <div class="title">
                <ul class="nav nav-pills">

                    @foreach (ProductGroup progrp in lstProGrp)
                {
                    if (counttab == 1)
                    {
                    <li class="active">
                        <a data-toggle="pill" href="#sanpham@(counttab)">@progrp.Name</a>
                    </li>
                        }
                        else
                        {
                    <li>
                        <a data-toggle="pill" href="#sanpham@(counttab)">@progrp.Name</a>
                    </li>
                        }

                        counttab++;
                    }



                </ul>
                <div id="xemthem">
                    <a href=""><i class="fa fa-caret-square-o-down" aria-hidden="true"></i></a>
                </div>
            </div>

            <div class="box-sanpham tab-content">
                @foreach (ProductGroup progrp in lstProGrp)
                {
                    List<Product> lstProduct = db.Products.Where(p => p.ProductGroupID == progrp.ProductGroupId).ToList();

                <div id="sanpham@(countdtl)" class="tab-pane fade in @(countdtl==1?"active":"")">

                    @foreach (Product pro in lstProduct)
                    {
                        <div class="col-md-3 item">
                            <div class="img-sp">
                                <p>
                                    <a href="">
                                        <img src="/@pro.Image">
                                    </a>
                                </p>
                                <div class="info-sp">
                                    <h1 id="info-ten">Gỗ Mỹ Nghệ Đại Nghĩa</h1>
                                    <h2 id="info-diachi">80 Nguyễn Tri Phương - Đà Nẵng</h2>
                                </div>
                            </div>

                            <div class="name-sp">
                                <h3 class="tensp">
                                    <a href="" title="">
                                        @pro.Name
                                    </a>
                                </h3>
                            </div>

                            <div class="xem-sp">
                                <div class="button">
                                    <div class="chitiet">
                                        <a href="">Chi Tiết</a>
                                    </div>
                                    <div class=" goingay">
                                        <a href="">Gọi Ngay</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        }


                </div>


                    countdtl++;
                }

            </div>
        </div>
    }

 </div>



    <!-- end product -->



