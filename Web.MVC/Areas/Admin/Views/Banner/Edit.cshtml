@model EnF.ADV

@{
    ViewBag.Title = "Sửa";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Edit", "Banner", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.AdvId)
        @Html.HiddenFor(model => model.Type)

        
        <div class="form-group">
            @Html.Label("Hình ảnh", new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                <img id="Image" height="200" src="/@(Model.Image)" />
                @Html.Hidden("Image", Model.Image)
                <input type="file" id="fileUpload" name="fileUpload" />
                @Html.ValidationMessageFor(model => model.Image)
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Text hiển thị", new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.TextBoxFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Miêu tả", new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.TextAreaFor(model => model.Des)
                @Html.ValidationMessageFor(model => model.Des)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
