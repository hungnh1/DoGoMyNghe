@model EnF.ProductGroup

@{
    ViewBag.Title = "Sửa "+ Model.Name;
    ViewBag.Title = "Thêm mới nhóm sản phẩm";
    ViewDataDictionary vdDictionaryT1 = new ViewDataDictionary();
    vdDictionaryT1.Add("ParentId", Model.CategoryId);
    vdDictionaryT1.Add("Level", "productGroup");
}
<div style="margin-top: 45px; background: #eee;">
    <h2>@Html.Partial("_PartialBreakum", vdDictionaryT1)</h2>
</div>
<h2>@ViewBag.Title </h2>

@using (Html.BeginForm("Edit", "ProductGroup", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ProductGroupId)
        @Html.HiddenFor(model => model.CategoryId)

        <div class="form-group">
            @Html.Label("Tên", new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name)
                
            </div>
        </div>

       
       


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-success" />
            </div>
        </div>
        <div class="form-actions no-color">
            @Html.ActionLink("Back to List", "Index", new { categoryId = Model.CategoryId })
        </div>
    </div>
}


